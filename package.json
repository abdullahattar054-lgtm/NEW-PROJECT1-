{
  "name": "tech-pk-backend",
  "version": "1.0.0",
  "description": "Backend API for TECH.PK - Premium Electronics E-Commerce Platform",
  "main": "index.js",
  "type": "module",
  
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon server.js",
    "seed": "node data/seeder.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --forceExit --detectOpenHandles",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "vercel-build": "echo 'Build complete'"
  },
  "keywords": [
    "ecommerce",
    "electronics",
    "api",
    "express",
    "mongodb"
  ],
  "author": "TECH.PK",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "google-auth-library": "^10.5.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.6",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.x"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true,
    "testTimeout": 30000,
    "transform": {}
  }
}